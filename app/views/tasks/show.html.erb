<div>
  <div>
    <div>
      <h2><%= @task.title %></h2>
    </div>
    <div>
      <button type="button"><%= link_to 'Edit my task!', edit_task_path %></button>
    </div>
  </div>
  <div class="background">
    <p><%= @task.details %></p>
  </div>
  <div>
    <div>
      <% if @task.completed == false %>
        <input type="checkbox">
        <label for="checkbox">This task is not completd yet</label>
      <% else %>
        <input type="checkbox" checked>
        <label for="checkbox">This is task is completd </label>
      <% end %>
    </div>
  </div>
  <div>
    <%= link_to "Delete", task_path(@task),
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
  </div>
  <div>
    <p><%= link_to 'Back to my tasks', tasks_path %></p>
  </div>
</div>
